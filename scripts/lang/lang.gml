function lang()
{
	with obs
	{
		if language = "en"
		{
			lang_settings = "Options"
			lang_level = "level"
		}
	
		if language = "ru"
		{
			lang_settings = "Настройки"
			lang_level = "уровень"
		}
		
		if language = "ge"
		{
			lang_settings = "Optionen"
			lang_level = "level"
		}
		
		if language = "fr"
		{
			lang_settings = "Options"
			lang_level = "niveau"
		}
		
		if language = "sp"
		{
			lang_settings = "Opciones"
			lang_level = "nivel"
		}
		
		if language = "it"
		{
			lang_settings = "Opzioni"
			lang_level = "livello"
		}
	}
}